<!DOCTYPE html>
<html>
<head>
  <title>Counting Words</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <h1>Counting Words</h1>
  <header>
    <div class="nav">
      <ul>
        <li class=<%= home_active %>><%= link_to 'Home', root_path %></li>
      <li class=<%= new_url_active %>><%= link_to 'New URL', new_scraped_url_path %></li>
      <li class=<%= show_url_active %>>Scraped URL</li>
      </ul>
    </div>
  </header>
    <%- if flash[:notice] -%>
    <div id="notice" class="alert alert-info" role="alert">
      <%= flash[:notice].html_safe %>
    </div>
  <%- end -%>
  <%- if flash[:alert] -%>
    <div id="errors" class="alert alert-danger" role="alert">
      <%= flash[:alert].html_safe %>
    </div>
  <%- end -%>
  <%= yield %>
</div>

</body>
</html>
