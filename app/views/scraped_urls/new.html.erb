<h3>Enter new URL to scrape</h3>
<small>Please don't forget the http:// at the beginning!</small>
<br>
<%= form_for(@scraped_url) do |f| %>
  <% if @scraped_url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scraped_url.errors.count, "error") %> prohibited this URL from being saved:</h2>

      <ul>
      <% @scraped_url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'URL' %>: <%= f.text_field :url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>